{
	"name": "arzynik/tipsy-mvc",
	"description": "An MVC extension for Tipsy",
	"license": "MIT",
	"keywords": [
		"php",
		"mvc",
		"framework",
		"extension",
		"plugin"
	],
	"authors": [
		{
			"name": "Devin Smith",
			"email": "devin@tipsy.la",
			"homepage": "http://devin.la",
			"role": "Developer"
		}
	],
	"minimum-stability": "stable",
	"require": {
		"php": ">=5.4.0"
	},
	"require-dev": {
		"satooshi/php-coveralls": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Tipsy\\MVC\\": "src/"
		},
		"files": [
			"src/run.php"
		]
	},
	"archive": {
		"exclude": ["/tests", "/.travis.yml", "/.gitignore"]
	},
	"scripts": {
		"post-package-install": [
			"Tipsy\MVC\Install::run"
		]
	}
}
